{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "types": []
  },
  "include": ["packages/*/src/**/*.js"],
  "exclude": ["**/*.test.*", "**/__tests__/**", "**/test/**", "**/bench/**"]
}