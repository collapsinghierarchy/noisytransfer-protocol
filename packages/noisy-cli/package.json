{
  "name": "@noisytransfer/noisy-cli",
  "version": "0.1.0",
  "type": "module",
  "bin": { "noisy": "bin/noisy.js" },
  "dependencies": {
    "@noisytransfer/transport": "workspace:*",
    "@noisytransfer/noisystream": "workspace:*",
    "@noisytransfer/noisyauth": "workspace:*",
    "@noisytransfer/crypto": "workspace:*",
    "@noisytransfer/util": "workspace:*",
    "@roamhq/wrtc": "^0.9.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.6.0"
  },
  "scripts": {
    "build:bin:host": "pkg -C Brotli -t host -o dist/noisy .",
    "build:bin:linux": "pkg -C Brotli -t latest-linux-x64   -o dist/noisy-linux-x64   .",
    "build:bin:mac":   "pkg -C Brotli -t latest-macos-arm64 -o dist/noisy-macos-arm64 .",
    "build:bin:win":   "pkg -C Brotli -t latest-win-x64     -o dist/noisy-win-x64.exe .",
    "build:bin": "pnpm run build:bin:host"
  },
  "pkg": {
    "assets": [
      "node_modules/@roamhq/wrtc*/**/*.node"
    ]
  }
}
