{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@10",
  "scripts": {
    "build": "bun run -A turbo build || true",
    "test": "node --test packages",
    "test:util": "node --test packages/util",
    "test:watch": "node --test --watch packages",
    "test:spec": "node --test --test-reporter=spec packages",
    "test:ci": "node scripts/run-tests-ci.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "pack:dry": "node scripts/pack-all-dry.mjs"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@roamhq/wrtc": "^0.9.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
